<%= form_for MailpimpMailer::Customer.new, url: '/mp/newsletters/create', as: :newsletter, remote: true, html: { class: 'newsletter newsletter--footer' } do |f| %>
  <%= f.hidden_field :list_id, value: list_id %>
  <%= f.text_field :email, placeholder: placeholder, class: 'newsletter__input' %>
  <%= f.submit 'Submit', class: 'newsletter__submit button', data: { disable_with: disable_with_message } %>
  <div class="newsletter__msg"></div>
<% end %>
